<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Текст вопроса"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить ответ"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_answer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Текст ответа"
            android:layout_marginTop="4dp"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_is_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Верный ответ"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btn_add_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить ответ"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Список ответов:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <ListView
            android:id="@+id/lv_answers"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:divider="#BDBDBD"
            android:dividerHeight="1dp"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btn_save_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить вопрос"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
